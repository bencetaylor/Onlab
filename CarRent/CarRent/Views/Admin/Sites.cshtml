@model CarRent.Models.DataViewModels.SiteViewModel

@{
    ViewData["Title"] = "Sites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sites</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sites)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Site" asp-action="Edit" asp-route-id="@item.SiteID">Edit</a> |
                        <a asp-area="" asp-controller="Site" asp-action="Details" asp-route-id="@item.SiteID">Details</a> |
                        <a asp-area="" asp-controller="Site" asp-action="Delete" asp-route-id="@item.SiteID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-area="" asp-controller="Site" asp-action="Create" class="btn btn-light">Create</a>
    </div>
</div>