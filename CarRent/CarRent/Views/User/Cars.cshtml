@model CarRent.Models.DataViewModels.CarViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cars</h2>

<div class="container">
    <div class="row">
        @using (Html.BeginForm())
            {
            <p>
                Price: @Html.TextBox("MinPrice") - @Html.TextBox("MaxPrice")
            </p>
            <p>
                Passangers: @Html.TextBox("MinPassanger") - @Html.TextBox("MaxPassanger")
            </p>
            <input type="submit" value="Search" />
        }
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var car in Model.Cars)
            {
            <div class="col" style="margin:10px;">
                <div class="row">
                    <a asp-area="" asp-controller="Home" asp-action="CarDetails" asp-route-id="@car.CarID" style="width: 100%; height: 100%; position: relative;">
                        <img src="~/images/@car.NumberPlate/@car.Image.Path" width="150" height="100" />
                    </a>
                    <div class="info">
                        <h6 style="color: aliceblue;">@car.Brand</h6>
                        <h6 style="color: aliceblue;">@car.Price Ft/day</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>