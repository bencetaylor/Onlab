@model CarRent.Models.DataViewModels.CarViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cars</h2>

<div class="container">
    <div class="row">
        <div class="col-3">
            <div class="row">
                @using (Html.BeginForm())
            {
                    <p>
                        Price:
                    </p>
                    <p>
                        Min: @Html.TextBox("MinPrice") 
                    </p>
                    <p>
                        Max: @Html.TextBox("MaxPrice")
                    </p>
                    <p>
                        Passangers:
                    </p>
                    <p>
                        Min: @Html.TextBox("MinPassanger")
                    </p>
                    <p>
                        Max: @Html.TextBox("MaxPassanger")
                    </p>
                    <input type="submit" value="Search" />
                }
            </div>
        </div>
        <div class="col-9">
            <div class="row">
                @foreach (var car in Model.Cars)
            {
                    <div class="col" style="margin:10px;">
                        <div class="row">
                            <a asp-area="" asp-controller="Home" asp-action="CarDetails" asp-route-id="@car.CarID" style="width: 100%; height: 100%; position: relative;">
                                <img src="~/images/@car.NumberPlate/@car.Image.Path" width="150" height="100" />
                            </a>
                            <div class="info">
                                <h6 style="color: aliceblue;">@car.Brand</h6>
                                <h6 style="color: aliceblue;">@car.Price Ft/day</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

